        <shape android:shape="rectangle">
            <corners android:radius="10dp"/>
            <solid android:color="#009900"/>
            <padding android:bottom="8dp" android:left="10dp" android:right="10dp" android:top="8dp"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="10dp"/>
            <solid android:color="#00CC00"/>
            <padding android:bottom="8dp" android:left="10dp" android:right="10dp" android:top="8dp"/>
        </shape>
    </item>
</selector>